@model ProductCreateVM

@{
    ViewData["Title"] = "Create";
}

<div class="container my-5">
    <form class="forms-sample" asp-action="Create" method="post" enctype="multipart/form-data">
       
        <label for="formFile" class="form-label"><b>Add a new Name</b></label>
        <input class="form-control" id="customFile" asp-for="Name" />
        <span class="text-danger" asp-validation-for="Name"></span>

        <div class="form-group mt-5">
            <label for="formFile" class="form-label"><b>Add a new Description</b></label>
            <textarea class="form-control" id="desc-text" asp-for="Description" rows="3"></textarea>
            <span class="text-danger" asp-validation-for="Description"></span>

        </div>

        <div class="form-group mt-5">
            <label for="formFile" class="form-label"><b>Add a new Price</b></label>
            <input type="number" step=".01" class="form-control" type="text" id="formFile" asp-for="Price">
            <span class="text-danger" asp-validation-for="Price"></span>

        </div>

        <div class="form-group mt-5">
            <label for="formFile" class="form-label"><b>Add a new Count</b></label>
            <input class="form-control" type="text" id="formFile" asp-for="Count">
            <span class="text-danger" asp-validation-for="Count"></span>

        </div>

        <div class="form-group mt-5">
            <label for="formFile" class="form-label"><b>Add a new Category</b></label>
            <select class="form-control" id="formFile" asp-for="CategoryId" asp-items="@ViewBag.categories"></select>
        </div>

        <div class="form-group mt-5">
            <label for="formFile" class="form-label"><b>Add a new Photos</b></label>
            <input class="form-control" id="customFile" asp-for="Photos" />
            <span class="text-danger" asp-validation-for="Photos"></span>
        </div>


        <div class="buttons my-3">
            <button type="submit" class="btn btn-primary mr-2">Submit</button>
            <a class="btn btn-light" asp-action="Index">Cancel</a>
        </div>
    </form>
</div>


@section Scripts{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/ckeditor//ckeditor.js"></script>
    <script>
        CKEDITOR.replace("desc-text");
    </script>

}
